@page "{id}"
@model TabApp.Pages_Repair.CreateRepairModel

@{
    ViewData["Title"] = "New repair";
}

<h1>Create</h1>

<h4>Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Repair.ItemID" class="form-control" value="@Model.ID" />
                <span asp-validation-for="Repair.ItemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.AdmissionDate" class="control-label"></label>
                <input asp-for="Repair.AdmissionDate" class="form-control" />
                <span asp-validation-for="Repair.AdmissionDate" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Repair.IssueDate" class="control-label"></label>
                <input asp-for="Repair.IssueDate" class="form-control" />
                <span asp-validation-for="Repair.IssueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.Cost" class="control-label"></label>
                <input asp-for="Repair.Cost" class="form-control" />
                <span asp-validation-for="Repair.Cost" class="text-danger"></span>
            </div> *@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Repair.Warranty" /> @Html.DisplayNameFor(model => model.Repair.Warranty)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Repair.Status" class="control-label"></label>
                <input asp-for="Repair.Status" class="form-control" />
                <span asp-validation-for="Repair.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.PickupCode" class="control-label"></label>
                <input asp-for="Repair.PickupCode" class="form-control" />
                <span asp-validation-for="Repair.PickupCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
